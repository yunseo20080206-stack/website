---
/*
  ============================================================
  PROJECT DETAIL PAGE - projects/[slug].astro
  Dynamic page for individual project details.
  Content comes from Markdown files in /src/content/projects/
  ============================================================
*/
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Generate static paths for all projects
export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
const { title, description, date, tags, role, tools, thumbnail, links } = project.data;

// Format date
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={title} description={description} image={thumbnail}>
  <article>
    <!-- Hero Section -->
    <header class="section bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-950 pb-8">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <!-- Back Button -->
          <a href="/projects" class="inline-flex items-center text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 mb-6 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Projects
          </a>
          
          <!-- Tags -->
          <div class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
          
          <!-- Title -->
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
            {title}
          </h1>
          
          <!-- Description -->
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">
            {description}
          </p>
          
          <!-- Meta Info -->
          <div class="flex flex-wrap gap-6 text-sm text-gray-500 dark:text-gray-400">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>{formattedDate}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>{role}</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Thumbnail Image -->
    {thumbnail && (
      <div class="container-custom mb-12">
        <div class="max-w-4xl mx-auto">
          <img 
            src={thumbnail} 
            alt={`${title} project image`}
            class="w-full rounded-2xl shadow-lg"
          />
        </div>
      </div>
    )}
    
    <!-- Content -->
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="grid lg:grid-cols-4 gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-3 order-2 lg:order-1">
            <div class="prose prose-lg dark:prose-invert max-w-none prose-headings:font-heading prose-a:text-primary-600 dark:prose-a:text-primary-400 prose-img:rounded-xl">
              <Content />
            </div>
          </div>
          
          <!-- Sidebar -->
          <aside class="lg:col-span-1 order-1 lg:order-2">
            <div class="lg:sticky lg:top-24 space-y-6">
              <!-- Tools Used -->
              <div class="card p-5">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-3">Tools & Technologies</h3>
                <div class="flex flex-wrap gap-2">
                  {tools.map((tool: string) => (
                    <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded-md">
                      {tool}
                    </span>
                  ))}
                </div>
              </div>
              
              <!-- Links -->
              {links && (Object.values(links).some(Boolean)) && (
                <div class="card p-5">
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-3">Project Links</h3>
                  <div class="space-y-2">
                    {links.demo && (
                      <a 
                        href={links.demo} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                      >
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                        Live Demo
                      </a>
                    )}
                    {links.github && (
                      <a 
                        href={links.github} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                      >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        View Code
                      </a>
                    )}
                    {links.document && (
                      <a 
                        href={links.document} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                      >
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Documentation
                      </a>
                    )}
                  </div>
                </div>
              )}
              
              <!-- Share Section -->
              <div class="card p-5">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-3">Share</h3>
                <div class="flex gap-2">
                  <button 
                    onclick="navigator.clipboard.writeText(window.location.href); this.innerText = 'Copied!';"
                    class="flex-1 btn-secondary text-sm py-2"
                    aria-label="Copy link to clipboard"
                  >
                    Copy Link
                  </button>
                </div>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </div>
    
    <!-- Navigation -->
    <nav class="section" aria-label="Project navigation">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto flex justify-between">
          <a href="/projects" class="btn-secondary">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            All Projects
          </a>
        </div>
      </div>
    </nav>
  </article>
</Layout>

<style>
  /* Add Tailwind Typography plugin styles inline since we're not using the plugin */
  .prose {
    color: inherit;
    max-width: 65ch;
  }
  
  .prose h2 {
    @apply text-2xl font-bold mt-10 mb-4 text-gray-900 dark:text-white;
  }
  
  .prose h3 {
    @apply text-xl font-semibold mt-8 mb-3 text-gray-900 dark:text-white;
  }
  
  .prose p {
    @apply mb-4 leading-relaxed;
  }
  
  .prose ul, .prose ol {
    @apply mb-4 pl-6;
  }
  
  .prose li {
    @apply mb-2;
  }
  
  .prose ul {
    @apply list-disc;
  }
  
  .prose ol {
    @apply list-decimal;
  }
  
  .prose strong {
    @apply font-semibold text-gray-900 dark:text-white;
  }
  
  .prose a {
    @apply text-primary-600 dark:text-primary-400 hover:underline;
  }
  
  .prose img {
    @apply rounded-xl shadow-lg my-8;
  }
  
  .prose blockquote {
    @apply border-l-4 border-primary-500 pl-4 italic text-gray-600 dark:text-gray-400;
  }
  
  .prose code {
    @apply bg-gray-100 dark:bg-gray-800 px-1.5 py-0.5 rounded text-sm;
  }
  
  .prose pre {
    @apply bg-gray-900 dark:bg-gray-800 p-4 rounded-lg overflow-x-auto my-6;
  }
  
  .prose pre code {
    @apply bg-transparent p-0;
  }
  
  .prose table {
    @apply w-full my-6 text-sm;
  }
  
  .prose th, .prose td {
    @apply border border-gray-200 dark:border-gray-700 px-4 py-2 text-left;
  }
  
  .prose th {
    @apply bg-gray-50 dark:bg-gray-800 font-semibold;
  }
</style>
