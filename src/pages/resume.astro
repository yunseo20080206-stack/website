---
/*
  ============================================================
  RESUME PAGE - resume.astro
  Clean HTML resume with download PDF option.
  PLACEHOLDER: Update all content with your real information.
  ============================================================
*/
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Resume" 
  description="View Brian Kim's resume - education, experience, skills, and achievements."
>
  <!-- Hero Section -->
  <section class="section bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-950 pb-8">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold mb-2 text-gray-900 dark:text-white">
              Resume
            </h1>
            <p class="text-gray-600 dark:text-gray-400">
              Last updated: December 2024
            </p>
          </div>
          
          <!-- Download Button -->
          <!-- PLACEHOLDER: Add your PDF resume to /public/files/resume.pdf -->
          <a 
            href="/files/resume.pdf" 
            download
            class="btn-primary w-fit"
            aria-label="Download resume as PDF"
          >
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            Download PDF
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Resume Content -->
  <section class="section pt-0">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <!-- Resume Card -->
        <div class="card p-8 md:p-12 space-y-10">
          
          <!-- Header / Contact Info -->
          <header class="text-center border-b border-gray-200 dark:border-gray-700 pb-8">
            <!-- PLACEHOLDER: Update with your information -->
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2">
              Brian Kim
            </h2>
            <p class="text-lg text-primary-600 dark:text-primary-400 mb-4">
              Aspiring Engineer & Entrepreneur
            </p>
            <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-600 dark:text-gray-400">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Houston, TX
              </span>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <!-- PLACEHOLDER: Your email -->
                your.email@example.com
              </span>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                <!-- PLACEHOLDER: Your LinkedIn -->
                linkedin.com/in/your-profile
              </span>
            </div>
          </header>
          
          <!-- Education Section -->
          <section>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
              </svg>
              Education
            </h3>
            
            <!-- PLACEHOLDER: Update with your education -->
            <div class="space-y-4">
              <div class="flex flex-col md:flex-row md:justify-between">
                <div>
                  <h4 class="font-semibold text-gray-900 dark:text-white">The Village School</h4>
                  <p class="text-primary-600 dark:text-primary-400">IB Diploma Programme</p>
                  <p class="text-sm text-gray-600 dark:text-gray-400">Houston, TX</p>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-400 md:text-right">
                  <p>Expected Graduation: May 2026</p>
                  <p>GPA: X.XX / 4.0</p>
                </div>
              </div>
              
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <p><strong class="text-gray-700 dark:text-gray-300">IB Higher Level:</strong> Physics, Mathematics AA, Economics</p>
                <p><strong class="text-gray-700 dark:text-gray-300">IB Standard Level:</strong> English A, Korean B, Chemistry</p>
              </div>
            </div>
          </section>
          
          <!-- Experience Section -->
          <section>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Experience & Leadership
            </h3>
            
            <!-- PLACEHOLDER: Update with your experiences -->
            <div class="space-y-6">
              <!-- Experience 1 -->
              <div>
                <div class="flex flex-col md:flex-row md:justify-between mb-1">
                  <h4 class="font-semibold text-gray-900 dark:text-white">STEM Mentorship Program</h4>
                  <span class="text-sm text-gray-500 dark:text-gray-400">Sep 2023 â€“ Present</span>
                </div>
                <p class="text-primary-600 dark:text-primary-400 text-sm mb-2">Founder & Lead Mentor</p>
                <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1 list-disc list-inside">
                  <li>Founded weekly tutoring program connecting 12 high school volunteers with 35+ middle school students</li>
                  <li>Developed 30+ hands-on STEM lesson plans and curriculum materials</li>
                  <li>Achieved 94% student satisfaction rate and 0.7 average GPA improvement in STEM subjects</li>
                </ul>
              </div>
              
              <!-- Experience 2 -->
              <div>
                <div class="flex flex-col md:flex-row md:justify-between mb-1">
                  <h4 class="font-semibold text-gray-900 dark:text-white">Robotics Club</h4>
                  <span class="text-sm text-gray-500 dark:text-gray-400">Aug 2022 â€“ Present</span>
                </div>
                <p class="text-primary-600 dark:text-primary-400 text-sm mb-2">Vice President</p>
                <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1 list-disc list-inside">
                  <li>Lead team strategy sessions and coordinate competition preparation</li>
                  <li>Manage team of 15 members for regional robotics competitions</li>
                  <li>Placed in top 10 at Texas Regional Championship 2024</li>
                </ul>
              </div>
              
              <!-- Experience 3 -->
              <div>
                <div class="flex flex-col md:flex-row md:justify-between mb-1">
                  <h4 class="font-semibold text-gray-900 dark:text-white">Summer Engineering Internship</h4>
                  <span class="text-sm text-gray-500 dark:text-gray-400">Jun 2024 â€“ Aug 2024</span>
                </div>
                <p class="text-primary-600 dark:text-primary-400 text-sm mb-2">Engineering Intern (Placeholder)</p>
                <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1 list-disc list-inside">
                  <li>Assisted with CAD design and prototyping for sustainable product development</li>
                  <li>Conducted research on materials and manufacturing processes</li>
                  <li>Presented findings to engineering team at end of internship</li>
                </ul>
              </div>
            </div>
          </section>
          
          <!-- Projects Section -->
          <section>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
              Selected Projects
            </h3>
            
            <!-- PLACEHOLDER: Update with your projects -->
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">Sustainable Bridge Design Challenge</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  Designed bridge supporting 300x its weight using recycled materials. 1st place regional competition.
                </p>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">EcoLunch: School Sustainability Initiative</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  Developed business plan for food waste reduction program. Approved for pilot implementation.
                </p>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">Water Quality Analysis Research</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  12-week scientific investigation of local creek ecosystem. Presented at Texas Junior Science Symposium.
                </p>
              </div>
            </div>
          </section>
          
          <!-- Skills Section -->
          <section>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
              Skills
            </h3>
            
            <!-- PLACEHOLDER: Update with your skills -->
            <div class="grid md:grid-cols-2 gap-4 text-sm">
              <div>
                <h4 class="font-semibold text-gray-700 dark:text-gray-300 mb-2">Technical</h4>
                <p class="text-gray-600 dark:text-gray-400">
                  CAD Design (Fusion 360), 3D Printing, Python, Data Analysis, Arduino, Lab Research Methods
                </p>
              </div>
              <div>
                <h4 class="font-semibold text-gray-700 dark:text-gray-300 mb-2">Software</h4>
                <p class="text-gray-600 dark:text-gray-400">
                  Microsoft Office, Google Workspace, Notion, Canva, Vernier Logger Pro
                </p>
              </div>
              <div>
                <h4 class="font-semibold text-gray-700 dark:text-gray-300 mb-2">Languages</h4>
                <p class="text-gray-600 dark:text-gray-400">
                  English (Fluent), Korean (Native), Spanish (Conversational)
                </p>
              </div>
              <div>
                <h4 class="font-semibold text-gray-700 dark:text-gray-300 mb-2">Soft Skills</h4>
                <p class="text-gray-600 dark:text-gray-400">
                  Leadership, Public Speaking, Project Management, Team Collaboration
                </p>
              </div>
            </div>
          </section>
          
          <!-- Awards Section -->
          <section>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
              Awards & Recognition
            </h3>
            
            <!-- PLACEHOLDER: Update with your awards -->
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-900 dark:text-white font-medium">1st Place, Regional Engineering Design Challenge</span>
                <span class="text-gray-500 dark:text-gray-400">2024</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-900 dark:text-white font-medium">School Community Service Award</span>
                <span class="text-gray-500 dark:text-gray-400">2024</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-900 dark:text-white font-medium">Texas Junior Science Symposium Presenter</span>
                <span class="text-gray-500 dark:text-gray-400">2023</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-900 dark:text-white font-medium">Honor Roll (All Semesters)</span>
                <span class="text-gray-500 dark:text-gray-400">2022-Present</span>
              </div>
            </div>
          </section>
          
        </div>
        
        <!-- Print Instructions -->
        <p class="text-center text-sm text-gray-500 dark:text-gray-400 mt-6">
          ðŸ’¡ Tip: You can print this page (Ctrl/Cmd + P) for a clean resume format
        </p>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Print styles for resume */
  @media print {
    nav, footer, .btn-primary {
      display: none !important;
    }
    
    .card {
      box-shadow: none !important;
      border: 1px solid #e5e7eb !important;
    }
    
    body {
      background: white !important;
      color: black !important;
    }
  }
</style>
