---
/*
  ============================================================
  PROJECT CARD COMPONENT
  Displays a project in a card format for the grid.
  Used on the Home page (featured) and Projects index page.
  ============================================================
*/
interface Props {
  title: string;
  description: string;
  slug: string;
  tags: string[];
  tools: string[];
  thumbnail?: string;
  date: string;
}

const { title, description, slug, tags, tools, thumbnail, date } = Astro.props;

// Format date for display
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
});
---

<article class="card-hover group overflow-hidden">
  <!-- Thumbnail Image -->
  <div class="relative aspect-video overflow-hidden bg-gray-100 dark:bg-gray-800">
    {thumbnail ? (
      <img 
        src={thumbnail} 
        alt={`${title} project thumbnail`}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    ) : (
      <!-- Placeholder when no image is provided -->
      <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-primary-100 to-accent-100 dark:from-primary-900/30 dark:to-accent-900/30">
        <svg class="w-16 h-16 text-primary-300 dark:text-primary-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
      </div>
    )}
    
    <!-- Date Badge -->
    <div class="absolute top-3 right-3">
      <span class="px-2 py-1 text-xs font-medium bg-white/90 dark:bg-gray-900/90 text-gray-600 dark:text-gray-300 rounded-md backdrop-blur-sm">
        {formattedDate}
      </span>
    </div>
  </div>
  
  <!-- Card Content -->
  <div class="p-5">
    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-3">
      {tags.slice(0, 3).map((tag) => (
        <span class="tag text-xs">{tag}</span>
      ))}
    </div>
    
    <!-- Title -->
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
      <a href={`/projects/${slug}`} class="focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 rounded">
        <span class="absolute inset-0" aria-hidden="true"></span>
        {title}
      </a>
    </h3>
    
    <!-- Description -->
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
      {description}
    </p>
    
    <!-- Tools Used -->
    <div class="flex flex-wrap gap-1">
      {tools.slice(0, 3).map((tool) => (
        <span class="text-xs px-2 py-0.5 bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 rounded">
          {tool}
        </span>
      ))}
      {tools.length > 3 && (
        <span class="text-xs px-2 py-0.5 bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 rounded">
          +{tools.length - 3} more
        </span>
      )}
    </div>
  </div>
</article>

<style>
  /* Line clamp utility for limiting text lines */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
